deltaT          1e-4;

writeControl    adjustableRunTime;

writeInterval   .01;

purgeWrite      1000;

writeFormat     binary;

writePrecision  16;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           0.5;

maxDeltaT       1;

