//     (   $x1     $h      0       )   //6
    (   0       $h      0       )   //7

    (   0       0       $depth  )   //8
//     (   $x1     0       $depth  )   //9
//     (   $x2     0       $depth  )   //10
    (   $w      0       $depth  )   //11
    (   $w      $h      $depth  )   //12
//     (   $x2     $h      $depth  )   //13
//     (   $x1     $h      $depth  )   //14
    (   0       $h      $depth  )   //15

);

blocks
(
