// nPtsWide1   #calc "round(($w - 2*$x1)/$cellSize)";
// nPtsWide2   #calc "round($x1/$cellSize)";
nPtsWide    #calc "round($w/$cellSize)";
nPtsHigh    #calc "round($h/$cellSize)";
nDepthPts   1;

vertices
(
    (   0       0       0       )   //0
//     (   $x1     0       0       )   //1
